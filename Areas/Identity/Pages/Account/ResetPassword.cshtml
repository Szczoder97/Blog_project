<section class="section">
    <div class="columns">
        <div class="column is-3"></div>
        <div class="column is-7">
            <div class="container">

                <div>
                    <h1 class="title">@ViewData["Title"]</h1>
                    <h2 class="subtitle">Reset your password</h2>
                </div><hr />

                      <form method="post">
                          <div asp-validation-summary="ModelOnly" class="is-danger"></div>
                          <input asp-for="Input.Code" type="hidden" />

                          <div class="field form-group">
                              <label asp-for="Input.Email" class="label control-label"></label>
                              <div class="control">
                                  <input asp-for="Input.Email" class="input form-control" />
                                  <span asp-validation-for="Input.Email" class="icon is-small is-right"></span>
                              </div>
                          </div>
                          <div class="field form-group">
                              <label asp-for="Input.Password" class="label control-label"></label>
                              <div class="control">
                                  <input asp-for="Input.Password" class="input form-control" />
                                  <span asp-validation-for="Input.Password" class="icon is-small is-right"></span>
                              </div>
                          </div>
                          <div class="field form-group">
                              <label asp-for="Input.ConfirmPassword" class="label control-label"></label>
                              <div class="control">
                                  <input asp-for="Input.ConfirmPassword" class="input form-control" />
                                  <span asp-validation-for="Input.ConfirmPassword" class="icon is-small is-right"></span>
                              </div>
                          </div>
                          <div>
                              <button type="submit" class="button is-primary">Register</button>
                          </div>

                      </form>

            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
