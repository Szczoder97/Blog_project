@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}


<partial name="_StatusMessage" model="Model.StatusMessage" />

<section class="section">
    <div class="container">
        <div class="columns">
            <div class="column is-7">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="is-danger"></div>
                    <div class="form-group field">
                        <label asp-for="Username" class="control-label label"></label>
                        <input asp-for="Username" class="input form-control" />
                    </div>
                    <div class="form-group field">
                        <label asp-for="Input.PhoneNumber" class="control-label label"></label>
                        <input asp-for="Input.PhoneNumber" accept="image/*" class="input form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger tag is-white"></span>
                    </div>

                    <nav class="level">
                        <div class="form-group level-left">
                            <button id="update-profile-button" type="submit" class="button is-primary">Save</button>
                        </div>
                    </nav>
                </form>
            </div><hr />
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}