@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}


<nav class="level">
    <div class="level left">
        <p class="level-item mr-2"><a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Profile</a></p>
        <p class="level-item mr-2"><a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a></p>
        <p class="level-item mr-2"><a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Password</a></p>
        @if (hasExternalLogins)
        {
            <p class="level-item mr-2"><a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External logins</a></p>
        }
        <p class="level-item mr-2"><a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a></p>
        <p class="level-item mr-2"><a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Personal data</a></p>
    </div>
    @*<li class="nav-item"></li>
    <li class="nav-item"></li>
   
    <li class="nav-item"></li>
    <li class="nav-item"></li>*@
</nav>
