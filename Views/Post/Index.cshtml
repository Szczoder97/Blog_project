@model IEnumerable<Blog_project.Models.Post>

@{
    ViewData["Title"] = "Index";
    if(TempData.Peek("postAdnotation") != null)
    {
        <div class="container py-3">
            <div class="has-text-centered">
                <p class="subtitle">New post created</p>
            </div>
        </div>
    }
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<section class="section">
    <div class="container mb-6 pb-6">
        <div class="columns">
            @foreach (var item in Model)
            {
            <div class="column is-4">
                <div class="card mb-3">
                    @*<div class="card-image">
                        <figure class="image3">
                            <img src="~/assets/placeholder.jpg" alt="Vroom" class="px-6">
                        </figure>
                    </div>*@
                    <div class="card-content">
                        <div class="media">
                            <div class="media-content">
                                <p class="title is-4 ml-3">@Html.DisplayFor(modelItem => item.userName)</p>
                                <p class="subtitle is-6 ml-3">@Html.DisplayFor(modelItem => item.title)</p>
                            </div>
                        </div>
                        <div class="content">
                            @Html.DisplayFor(modelItem => item.text)
                            <br>
                            <time datetime="@Html.DisplayFor(model => item.publishedDate)" class="tag mt-2">Published @Html.DisplayFor(model => item.publishedDate)</time>
                        </div>
                        <div class="content has-text-centered">
                            <a asp-action="Edit" asp-route-id="@item.id" class="button is-warning is-rounded is-light mr-3">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.id" class="button is-info is-rounded is-light mr-3">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.id" class="button is-danger is-rounded is-light">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</section>


<script>
const tabs = document.querySelectorAll('.tabs li');
const tabContentBoxes = document.querySelectorAll('#tab-content > div');

tabs.forEach((tab) => {
    tab.addEventListener('click', () => {
        tabs.forEach(item => item.classList.remove('is-active'))
        tab.classList.add('is-active');
    })
})
</script>
