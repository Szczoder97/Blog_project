@model Blog_project.Models.Post

@{
    ViewData["Title"] = "Delete Post";
}

<section class="section">
    <div class="container pb-6 mb-6">
        <div class="columns">
            <div class="column is-3"></div>
            <div class="column is-7">
                <div>
                    <h1 class="title">Delete Post</h1>
                    <h2 class="subtitle">Do you want to delete this post?</h2>
                </div><hr />

                <div>
                    <strong>@Html.DisplayNameFor(model => model.userName)</strong>
                    @Html.DisplayFor(model => model.userName)
                </div>
                <div>
                    <strong>@Html.DisplayNameFor(model => model.title)</strong>
                    @Html.DisplayFor(model => model.title)
                </div>
                <div>
                    <strong>@Html.DisplayNameFor(model => model.text)</strong>
                    @Html.DisplayFor(model => model.text)
                </div>
                <div>
                    <strong>@Html.DisplayNameFor(model => model.publishedDate)</strong>
                    @Html.DisplayFor(model => model.publishedDate)
                </div>

                <form asp-action="DeleteConfirmed" class="mt-3">
                    <nav class="level form-group">
                        <div class="level-left">
                            <input type="hidden" asp-for="id" />
                            <input type="submit" value="Delete" class="is-rounded button is-danger" />
                        </div>
                        <div class="level-right">
                            <a asp-action="Index" class="is-rounded button level-right">Back to List</a>
                        </div>
                    </nav>
                </form>
            </div>
        </div>
    </div>
</section>
