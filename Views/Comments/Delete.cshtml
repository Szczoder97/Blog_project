@model Blog_project.Models.Comment

@{
    ViewData["Title"] = "Delete";
}

<section class="section">
    <div class="container pb-6 mb-6">
        <div class="column is-3"></div>
        <div class="column is-7 mb-6 pb-6">
            <div class="container">
                <div class="mb-3">
                    <h1 class="title">Delete</h1>
                    <h2 class="subtitle">Are you sure you want to delete this comment?</h2>
                </div>
                <dd class="image mb-3">
                    @(Model.text)
                </dd>
                <form asp-action="Delete">
                    <nav class="level form-group">
                        <div class="level-left">
                            <input type="hidden" asp-for="id" />
                            <input type="submit" value="Delete" class="button is-rounded is-danger" />
                        </div>
                        <div class="level-right">
                            <a asp-action="Index" class="button is-rounded level-right">Back to List</a>
                        </div>
                    </nav>
                </form>
            </div>
        </div>
    </div>
</section>